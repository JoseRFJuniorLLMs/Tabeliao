# =============================================================================
# Tabeliao - Smart Legal Tech Platform
# Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=Tabeliao
APP_PORT=3000
APP_URL=http://localhost:3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# Database (PostgreSQL 16)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://tabeliao:tabeliao_dev_2026@localhost:5432/tabeliao_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=tabeliao
DATABASE_PASSWORD=tabeliao_dev_2026
DATABASE_NAME=tabeliao_db
DATABASE_SSL=false

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_URL=amqp://tabeliao:tabeliao_dev_2026@localhost:5672
RABBITMQ_DEFAULT_USER=tabeliao
RABBITMQ_DEFAULT_PASS=tabeliao_dev_2026

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Gov.br OAuth2 (Autenticacao governamental)
# Staging: https://sso.staging.acesso.gov.br
# Production: https://sso.acesso.gov.br
# Docs: https://manual-roteiro-integracao-login-unico.servicos.gov.br
# -----------------------------------------------------------------------------
GOVBR_CLIENT_ID=
GOVBR_CLIENT_SECRET=
GOVBR_REDIRECT_URI=http://localhost:3000/api/v1/auth/govbr/callback
GOVBR_AUTH_URL=https://sso.staging.acesso.gov.br/authorize
GOVBR_TOKEN_URL=https://sso.staging.acesso.gov.br/token
GOVBR_USERINFO_URL=https://sso.staging.acesso.gov.br/userinfo

# -----------------------------------------------------------------------------
# AI Service (Anthropic Claude)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Blockchain (Polygon Amoy Testnet)
# Amoy Faucet: https://faucet.polygon.technology/
# -----------------------------------------------------------------------------
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_PRIVATE_KEY=
POLYGON_CHAIN_ID=80002
POLYGON_EXPLORER_URL=https://amoy.polygonscan.com

# Smart Contract Addresses (set after deployment)
POLYGON_CONTRACT_ADDRESS=
CONTRACT_REGISTRY_ADDRESS=
ESCROW_FACTORY_ADDRESS=
ARBITRATION_MANAGER_ADDRESS=

# -----------------------------------------------------------------------------
# Chainlink (Oracle)
# -----------------------------------------------------------------------------
CHAINLINK_NODE_URL=http://localhost:6688
CHAINLINK_JOB_ID=

# -----------------------------------------------------------------------------
# IPFS (Pinata)
# Dashboard: https://app.pinata.cloud/
# -----------------------------------------------------------------------------
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs
IPFS_API_KEY=
IPFS_API_SECRET=

# -----------------------------------------------------------------------------
# AWS S3 / MinIO (Document Storage)
# In development, MinIO is used as S3-compatible storage
# -----------------------------------------------------------------------------
AWS_S3_BUCKET=tabeliao-documents
AWS_ACCESS_KEY=minioadmin
AWS_SECRET_KEY=minioadmin
AWS_REGION=sa-east-1
AWS_S3_ENDPOINT=http://localhost:9000

# -----------------------------------------------------------------------------
# Payments - PIX (EfiPay / Open Finance)
# Docs: https://dev.efipay.com.br/docs/api-pix
# -----------------------------------------------------------------------------
PIX_CLIENT_ID=
PIX_CLIENT_SECRET=
PIX_CERT_PATH=./certs/pix-cert.pem
PIX_KEY_PATH=./certs/pix-key.pem
PIX_API_URL=https://pix-h.api.efipay.com.br
PIX_WEBHOOK_URL=http://localhost:3005/api/v1/payments/pix/webhook

# -----------------------------------------------------------------------------
# Payments - Stripe (Cartao de credito)
# Dashboard: https://dashboard.stripe.com/test
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# -----------------------------------------------------------------------------
# Notifications - Email (SendGrid)
# Dashboard: https://app.sendgrid.com/
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tabeliao.com.br
SENDGRID_FROM_NAME=Tabeliao

# -----------------------------------------------------------------------------
