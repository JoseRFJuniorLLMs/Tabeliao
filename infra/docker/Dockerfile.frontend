# =============================================================================
# Tabeliao - Next.js Frontend Dockerfile
# Multi-stage build for optimized production images
# =============================================================================

# ---------------------------------------------------------------------------
# Stage 1: Install dependencies
# ---------------------------------------------------------------------------
FROM node:20-alpine AS deps

RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy root workspace files
COPY package.json package-lock.json ./

# Copy frontend package.json
COPY frontend/package.json ./frontend/

# Copy shared packages package.json files
COPY packages/*/package.json ./packages-pkg/
RUN for dir in packages-pkg/*/; do \
      pkg=$(basename "$dir"); \
      mkdir -p "packages/$pkg"; \
      cp "$dir/package.json" "packages/$pkg/"; \
    done && rm -rf packages-pkg

# Install all dependencies
RUN npm ci --ignore-scripts

# ---------------------------------------------------------------------------
# Stage 2: Build the application
# ---------------------------------------------------------------------------
FROM node:20-alpine AS builder

WORKDIR /app

# Copy dependencies
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY package.json package-lock.json tsconfig.base.json ./
COPY packages/ ./packages/
COPY frontend/ ./frontend/

# Build shared packages first
RUN for dir in packages/*/; do \
      if [ -f "$dir/tsconfig.json" ]; then \
        npm run build -w "$dir" --if-present || true; \
      fi; \
    done

# Build the Next.js application
ENV NEXT_TELEMETRY_DISABLED=1
RUN npm run build -w frontend

# ---------------------------------------------------------------------------
# Stage 3: Production image
# ---------------------------------------------------------------------------
FROM node:20-alpine AS production

# Security: run as non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

WORKDIR /app

# Set production environment
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Copy the standalone build output
COPY --from=builder /app/frontend/public ./frontend/public
COPY --from=builder --chown=nextjs:nodejs /app/frontend/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/frontend/.next/static ./frontend/.next/static

# Switch to non-root user
USER nextjs

# Expose the port
EXPOSE 3000

# Set the port
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

# Start Next.js in standalone mode
CMD ["node", "frontend/server.js"]
