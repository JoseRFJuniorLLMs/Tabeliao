# Auth Service Environment Variables

# Application
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
APP_NAME=Tabeliao

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=tabeliao
DB_PASSWORD=tabeliao
DB_DATABASE=tabeliao_auth
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Gov.br OAuth2
GOVBR_CLIENT_ID=your-govbr-client-id
GOVBR_CLIENT_SECRET=your-govbr-client-secret
GOVBR_REDIRECT_URI=http://localhost:3001/api/v1/auth/govbr/callback
GOVBR_SCOPES=openid email phone profile govbr_confiabilidades

# KYC APIs
SERASA_API_URL=https://api.serasa.com.br/v1
SERASA_API_KEY=your-serasa-api-key
LAWSUITS_API_URL=https://api.tribunais.gov.br/v1
LAWSUITS_API_KEY=your-lawsuits-api-key
PEP_API_URL=https://api.transparencia.gov.br/v1
PEP_API_KEY=your-pep-api-key
RECEITA_API_URL=https://api.receitaws.com.br/v1
