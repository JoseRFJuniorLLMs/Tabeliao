# =============================================================================
# Tabeliao - Contract Service
# Handles contract creation, templates, signing workflows, and document storage
# =============================================================================

# -----------------------------------------------------------------------------
# Service
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_PORT=3002
SERVICE_NAME=contract-service

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# Each service uses its own schema within the shared database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://tabeliao:tabeliao_dev_2026@localhost:5432/tabeliao_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=tabeliao
DATABASE_PASSWORD=tabeliao_dev_2026
DATABASE_NAME=tabeliao_db
DATABASE_SCHEMA=contract

# -----------------------------------------------------------------------------
# Redis (Caching & Session)
# Used for: template caching, rate limiting, contract lock management
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# RabbitMQ (Message Broker)
# Queues: contract.created, contract.signed, contract.completed
# -----------------------------------------------------------------------------
RABBITMQ_URL=amqp://tabeliao:tabeliao_dev_2026@localhost:5672

# -----------------------------------------------------------------------------
# AWS S3 / MinIO (Document Storage)
# Stores: contract PDFs, signed documents, attachments
# In development, MinIO runs at localhost:9000
# -----------------------------------------------------------------------------
AWS_S3_BUCKET=tabeliao-documents
AWS_ACCESS_KEY=minioadmin
AWS_SECRET_KEY=minioadmin
AWS_REGION=sa-east-1
AWS_S3_ENDPOINT=http://localhost:9000

# -----------------------------------------------------------------------------
# IPFS (Pinata) - Immutable Document Hashing
# Contract hashes are stored on IPFS for tamper-proof verification
# -----------------------------------------------------------------------------
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs
IPFS_API_KEY=
IPFS_API_SECRET=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
