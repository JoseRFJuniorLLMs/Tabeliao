# =============================================================================
# Tabeliao - Dispute Service
# Handles contract disputes, arbitration workflows, mediator assignment,
# evidence management, and resolution tracking
# =============================================================================

# -----------------------------------------------------------------------------
# Service
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_PORT=3007
SERVICE_NAME=dispute-service

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# Stores: disputes, evidence records, arbitration sessions, resolutions
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://tabeliao:tabeliao_dev_2026@localhost:5432/tabeliao_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=tabeliao
DATABASE_PASSWORD=tabeliao_dev_2026
DATABASE_NAME=tabeliao_db
DATABASE_SCHEMA=dispute

# -----------------------------------------------------------------------------
# Redis (Caching & Real-time)
# Used for: dispute status cache, mediator availability, session locks
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# RabbitMQ (Message Broker)
# Queues: dispute.opened, dispute.evidence, dispute.resolve
# Publishes: dispute.resolved, dispute.escalated
# Consumes: contract.dispute (new dispute from contract service)
# -----------------------------------------------------------------------------
RABBITMQ_URL=amqp://tabeliao:tabeliao_dev_2026@localhost:5672

# -----------------------------------------------------------------------------
# Dispute Configuration
# -----------------------------------------------------------------------------
# Auto-assign mediator after this period (hours) if parties don't resolve
DISPUTE_AUTO_ESCALATION_HOURS=72

# Maximum evidence file size (bytes) - default 50MB
DISPUTE_MAX_EVIDENCE_SIZE=52428800

# Allowed evidence file types
DISPUTE_ALLOWED_EVIDENCE_TYPES=pdf,jpg,jpeg,png,mp4,mp3,docx,xlsx

# Resolution deadline in days (after mediator assignment)
DISPUTE_RESOLUTION_DEADLINE_DAYS=30

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
